<div class="container">
  <p><%= link_to "Back to index", restaurants_path, class: "btn btn-primary" %></p>
  <h2><%= @restaurant.name %></h2>
  <p><%= @restaurant.category %>, Tel: <%= @restaurant.phone_number %></p>
  <p>Address: <%= @restaurant.address %></p>

  <p><%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %></p>
  <ul>
    <% @restaurant.reviews.each do |review| %>
      <li>
        <p><%= review.content %></p>
        <p>Rating: <%= review.rating %> stars, posted on <%= review.created_at %></p>
      </li>
    <% end %>
  </ul>
</div>
